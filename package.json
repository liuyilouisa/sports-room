{
  "name": "sports-root",
  "private": true,
  "workspaces": ["apps/*"],
  "scripts": {
    "dev": "concurrently \"npm run dev:front\" \"npm run dev:server\"",
    "dev:front": "npm -w apps/front run dev",
    "dev:server": "npm -w apps/server run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}